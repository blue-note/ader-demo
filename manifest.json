{
  "manifest_version": 2,

  "name": "One-click Gengar",
  "description": "This extension demonstrates the power of shadows.",
  "version": "1.0",
  "background": {
  	"scripts": [
  		"jquery.min.js",
  		"toolbox.js",
  		"background.js"
  	]
  
  },
  "browser_action": {
    "default_icon": "gengar.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
  	{
  		"matches":["http://*/*", "https://*/*"],
  		"js": ["toolbox.js","haunter.js"],
  		"run_at": "document_start",
  		"all_frames": true
  	}
  ],
  
  "permissions": [
    "http://*/*", "https://*/*", "tabs", "webRequest","webRequestBlocking"
  ]
  
}
